echo "ls | cat"
ls | cat
echo '~~~'

echo "ls | ls | ls | ls"
ls | ls | ls | ls
echo '~~~'

echo "ls | ls | ls | cat"
ls | ls | ls | cat
echo '~~~'

echo "sleep 0.1 | ls"
sleep 0.1 | ls
echo '~~~'

echo "ls | wc | cat"
ls | wc | cat
echo '~~~'

echo "echo bonjour | cat"
echo bonjour | cat
echo '~~~'

echo "echo bonjour 1>&2 | cat -e"
echo bonjour 1>&2 | cat -e
echo '~~~'

echo "echo bonjour 1>&2 | cat -e > tmp; cat tmp; rm tmp"
echo bonjour 1>&2 | cat -e > tmp; cat tmp; rm tmp
echo '~~~'

echo "cat << EOF | wc | cat"
cat << EOF | wc | cat
bonjour
les
amiches
EOF
echo '~~~'

echo "> test | echo blabla; rm test"
> test | echo blabla; rm test
echo '~~~'

echo 'echo 1>&2 1 | echo 2 > noright | echo 3'
touch norights; chmod 000 norights
echo 1>&2 1 | echo 2 > norights | echo 3
rm -f norights
echo '~~~'


