###########################################################################################
# fg/bg jobspec
###########################################################################################

# ^Z fg
sleep 100
^Z
ps --ppid $$ -o state,comm; sleep .2
fg
^C

# ^Z bg
sleep 100
^Z
ps --ppid $$ -o state,comm; sleep .2
bg
ps --ppid $$ -o state,comm; sleep .2
kill -9 $!

# testing %n
sleep 100 & sleep 200 &
fg %3
fg %2
^C
fg %2
fg %0
fg %256
fg %1
^C

# testing %+ %% %
sleep 100 & sleep 200 & sleep 300 &
fg %+
^C
fg %%
^C
fg %
^C

# testing %-
sleep 100 & sleep 200 & sleep 300 &
fg %-
^C
fg %-
^C
fg %-
^C

# no current
fg
fg %
bg
bg %%

# job already done
true &
fg
true &
bg
